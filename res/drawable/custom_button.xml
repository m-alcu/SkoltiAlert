<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/white"
                android:endColor="@color/green_clear_skolti"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/green_skolti" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_focused="true" >
        <shape>
            <gradient
            	android:endColor="@color/white"
                android:startColor="@color/green_clear_skolti"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/green_skolti" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>        
        <shape>
            <gradient
                android:endColor="@color/skyblue_1"
                android:startColor="@color/white"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/skyblue_2" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>