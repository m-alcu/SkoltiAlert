<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content" android:id="@+id/skolti_item_root" style="@style/Theme.Skolti">
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content">
		<LinearLayout android:orientation="horizontal" android:layout_weight="0"
			android:layout_width="wrap_content" android:layout_height="wrap_content">
			<ImageView android:id="@+id/image_graph" android:src="@drawable/spin2"
				android:layout_width="60dip" android:layout_height="60dip" android:layout_margin="2dip"/>
		</LinearLayout>
		<LinearLayout android:orientation="vertical" android:layout_weight="1"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:layout_margin="2dip"
			android:id="@+id/colRight"
			android:clickable = "true">
			<LinearLayout android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">
				<TextView 
					android:layout_width="fill_parent"
					android:layout_height="60dip"
					android:id="@+id/colSearch"
					android:textSize="24sp"
					android:textColor="@color/gray_10"
					android:gravity="center_vertical"
					android:layout_gravity="center_vertical"/>
				<TextView 
    				android:layout_width="4dip"
    				android:layout_height="wrap_content"/>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/colTop"
					android:gravity="right"
					android:textSize="12sp" 
					android:layout_weight="1"
					android:textColor="@color/white"
					android:background="@drawable/roundgray"
					android:layout_gravity="center_vertical"/>
				<TextView 
    				android:layout_width="4dip"
    				android:layout_height="wrap_content"/>
				<TextView android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/colCount"
					android:gravity="right"
					android:textSize="12sp" 
					android:layout_weight="1"
					android:textColor="@color/white"
					android:background="@drawable/roundgray"
					android:layout_gravity="center_vertical"/>
			</LinearLayout>
		</LinearLayout>
	</LinearLayout>
 	<TextView 
 		android:layout_width="fill_parent"
		android:layout_height="1dip"
		android:background="@color/ivory_4" />
 	<TextView 
 		android:layout_width="fill_parent"
		android:layout_height="1dip"
		android:background="@color/white" />
</LinearLayout>
