<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
	<LinearLayout
	android:layout_width="60sp" 
	android:layout_height="60sp" 
	android:padding="1dp"
    android:orientation="vertical"
    android:background="@color/green_clear_skolti">
    	<TextView
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/colDateAlert"
    	android:gravity="center_horizontal" 
    	android:layout_gravity="center"
    	android:textStyle="bold"
    	android:textColor="@color/gray_10"
    	android:textSize="14sp"/>
		<TextView
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:id="@+id/colHourAlert"
    	android:gravity="center_horizontal" 
    	android:layout_gravity="center"
    	android:textStyle="bold"
    	android:textColor="@color/gray_10"
    	android:textSize="14sp"/>
    </LinearLayout>
    <LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dp">
    		<TextView
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:id="@+id/colSearchAlert"
    		android:layout_weight="1"
			android:textSize="24sp"
			android:textColor="@color/gray_10"
			android:gravity="center_vertical"
			android:layout_gravity="center_vertical"/>
    		<TextView
    		android:layout_width="120sp"
    		android:layout_height="wrap_content"
    		android:id="@+id/colTopAlert"
    		android:layout_weight="1"
    		android:textSize="16sp"
    		android:textColor="@color/white"
	    	android:gravity="center_horizontal" 
    		android:padding="2sp" 
    		android:layout_gravity="center"
			android:background="@drawable/roundgray"/>
			<TextView 
    		android:layout_width="4dip"
    		android:layout_height="wrap_content"/>
    		<TextView
    		android:layout_width="120sp"
    		android:layout_height="wrap_content"
    		android:id="@+id/colCountAlert"
    		android:layout_weight="1"
    		android:textSize="16sp"
    		android:textColor="@color/white"
   	    	android:gravity="center_horizontal" 
    		android:padding="2sp" 
    		android:layout_gravity="center"
			android:background="@drawable/roundred"/>
    </LinearLayout>
</LinearLayout>
